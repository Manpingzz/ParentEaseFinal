<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nanny.NannyshareMain">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="73dp" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        app:layout_constraintBottom_toBottomOf="@id/guideline"
        app:layout_constraintEnd_toStartOf="@+id/chip_yoegreater1"
        app:layout_constraintStart_toStartOf="parent"
       />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_yoegreater1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YOE>=1"
        app:layout_constraintBottom_toBottomOf="@id/guideline"
        app:layout_constraintEnd_toStartOf="@+id/chip_distancelessthanfive"
        app:layout_constraintStart_toEndOf="@+id/chip_gender"
         />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip_distancelessthanfive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Within 5 km"
        app:layout_constraintBottom_toBottomOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chip_yoegreater1"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <ImageView
        android:id="@+id/tv_myAccount"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_tips"
        app:layout_constraintTop_toBottomOf="@id/guideline6"
        app:srcCompat="@drawable/ic_baseline_account_circle_24" />

    <ImageView
        android:id="@+id/tv_nanny"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toStartOf="@id/tv_tips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline6"
        app:srcCompat="@drawable/ic_baseline_baby_changing_station_24" />

    <ImageView
        android:id="@+id/tv_tips"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toStartOf="@id/tv_myAccount"
        app:layout_constraintStart_toEndOf="@id/tv_nanny"
        app:layout_constraintTop_toBottomOf="@id/guideline6"
        app:srcCompat="@drawable/ic_baseline_add_circle_outline_24" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline" />


</androidx.constraintlayout.widget.ConstraintLayout>